{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier de {{ user_full_name }}</h1>
    
    {% set montant_total = 0 %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Prix total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.product.name }}</td>
                <td>{{ cart.product.quantity }}</td>
                <td>{{ cart.product.price }} €</td>
                <td>{{ cart.product.quantity * cart.product.price }} €</td>
                <td>{{ cart.purchaseDate ? cart.purchaseDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {{ include('cart_content/_delete_form.html.twig') }}
                </td>
            </tr>
            {% set montant_total = montant_total + (cart.product.quantity * cart.product.price) %}
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez pas encore de produit dans votre panier</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if carts is not empty %}
        <div class="card">
            <div class="card-body">
                Montant total de votre panier : {{ montant_total }} €
            </div>
        </div>
    {% endif %}

{% endblock %}
