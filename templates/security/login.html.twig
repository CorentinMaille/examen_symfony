{% extends 'base.html.twig' %}

{% block title %}{{ 'title.login'|trans }}{% endblock %}

{% block body %}
<form class="mx-auto text-center w-50" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'subtitle.login'|trans }}</h1>
    <hr>
    <label for="inputEmail" class="mt-3">{{ 'user.email'|trans }}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mt-3">{{ 'user.password'|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-success mt-4 w-50" type="submit">
        {{ 'button.login'|trans }}
    </button>
</form>
{% endblock %}
